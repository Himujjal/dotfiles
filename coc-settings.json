{
  "coc.preferences.jumpCommand": "tab drop",
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "json",
    "javascript",
    "typescript",
    "graphql",
    "html",
    "python",
    "svelte",
    "java",
    "nim",
    "c",
    "cpp",
    "lua",
    "go",
    "rust",
    "zig"
  ],
  "coc.preferences.hoverTarget": "float",

  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": ""
  },

  // diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  "diagnostic.virtualText": true, // this won't work with codelens when error on same line

  // "diagnostic.displayByAle": true,

  // codelens TODO what does this get me?
  // "codeLens.enable": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintCategorySeverity.error": "Warning",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/local/bin/black",
  "python.jediEnabled": false,

  // explorer
  "explorer.width": 30,
  // "explorer.icon.enableNerdfont": true,
  // "explorer.previewAction.onHover": false,
  // "explorer.icon.enableVimDevicons": false,
  // "explorer.keyMappings": {
  //   "<cr>": ["expandable?", "expand", "open"],
  //   "v": "open:vsplit"

  "java.jdt.ls.vmargs": "-Dfile.encoding=UTF-8",
  "java.format.enabled": true,
  "java.format.onType.enabled": false,
  "java.format.onType.fixComment.enabled": false,
  //"java.format.settings.url": "C:\\Users\\himuj\\AppData\\Local\\coc\\extensions\\node_modules\\redhat.java\\eclipse-formatter.xml",
  "languageserver": {
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim", "nims"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes":["lua"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"],
      "initializationOptions": {"languageServerHaskell": { "hlintOn": true }}
    }
    //"zls": {
    //  "command": "~/programs/zig_0.8/zls",
    //  "filetypes": ["zig"]
    //}
  },


  // rust
  "rust-analyzer.serverPath": "~/.local/bin/rust-analyzer"
}
